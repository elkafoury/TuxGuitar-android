<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<android.support.v7.widget.GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		app:columnCount="2" 
		style="@style/Dialog">
	
		<TextView 
			android:id="@+id/tempo_dlg_tempo_label"
			android:text="@string/tempo_dlg_speed_label"
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
	

		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />


		<RadioGroup
			android:id="@+id/percent_dlg_options_group"
			app:layout_columnSpan="2"
			app:layout_gravity="fill_horizontal|center_vertical">

			<RadioButton android:id="@+id/percent_dlg_options_100"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="@string/percent_dlg_options_100" />

			<RadioButton android:id="@+id/percent_dlg_options_75"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="@string/percent_dlg_options_75" />

			<RadioButton android:id="@+id/percent_dlg_options_50"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="@string/percent_dlg_options_50" />

			<RadioButton android:id="@+id/percent_dlg_options_25"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="@string/percent_dlg_options_25" />
		</RadioGroup>
	
	</android.support.v7.widget.GridLayout>

</ScrollView>