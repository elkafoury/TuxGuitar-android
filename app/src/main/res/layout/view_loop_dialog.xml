<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<android.support.v7.widget.GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		app:columnCount="2" 
		style="@style/Dialog">
		<CheckBox
			android:id="@+id/loop_dlg_is_loop_value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Loop"
			android:checked="false"
			/>
		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />
	
		<TextView 
			android:id="@+id/loop_start_dlg_label"
			android:text="@string/loop_dlg_start_measure_label"
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
	
		<Spinner 
			android:id="@+id/loop_dlg_sloop_value"
			app:layout_gravity="fill_horizontal|center_vertical" />

		<TextView
			android:id="@+id/loop_end_dlg_label"
			android:text="@string/loop_dlg_end_measure_label"
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />

		<Spinner
			android:id="@+id/loop_dlg_eloop_value"
			app:layout_gravity="fill_horizontal|center_vertical" />
	
		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />
		<TextView
			android:id="@+id/loop_speed_dlg_label"
			android:text="@string/loop_dlg_speed_label"
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />

		<Spinner
			android:id="@+id/loop_dlg_speed_value"
			app:layout_gravity="fill_horizontal|center_vertical" />

		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />


	</android.support.v7.widget.GridLayout>

</ScrollView>