<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<android.support.v7.widget.GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		app:columnCount="2" style="@style/Dialog">
	
		<TextView 
			android:id="@+id/measure_remove_dlg_from_label"
			android:text="@string/measure_remove_dlg_from_label" 
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
	
		<Spinner 
			android:id="@+id/measure_remove_dlg_from_value"
			app:layout_gravity="fill_horizontal|center_vertical" />
			
		<TextView 
			android:id="@+id/measure_remove_dlg_to_label"
			android:text="@string/measure_remove_dlg_to_label" 
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
	
		<Spinner 
			android:id="@+id/measure_remove_dlg_to_value"
			app:layout_gravity="fill_horizontal|center_vertical" />
	</android.support.v7.widget.GridLayout>

</ScrollView>