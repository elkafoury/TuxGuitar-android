<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<android.support.v7.widget.GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		app:columnCount="2" style="@style/Dialog">
		
		<TextView 
			android:id="@+id/trill_dlg_fret_label"
			android:text="@string/trill_dlg_fret_label" 
			app:layout_gravity="fill_horizontal|center_vertical"
			style="@style/TextViewLabel" />
	
		<Spinner 
			android:id="@+id/trill_dlg_fret_value"
			app:layout_gravity="fill_horizontal|center_vertical" />
	
		<android.support.v7.widget.Space
			app:layout_gravity="fill"
			app:layout_columnSpan="2"
			style="@style/DialogSectionSpacer" />
			
		<RadioGroup 
			android:id="@+id/trill_dlg_duration_group"
			app:layout_gravity="fill_horizontal|center_vertical" 
			app:layout_columnSpan="2" >
			
			<RadioButton 
				android:id="@+id/trill_dlg_duration_16"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/trill_dlg_duration_16" 
				android:drawableRight="@drawable/duration_16" />
			
			<RadioButton 
				android:id="@+id/trill_dlg_duration_32"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/trill_dlg_duration_32"
				android:drawableRight="@drawable/duration_32" />
				
			<RadioButton 
				android:id="@+id/trill_dlg_duration_64"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:text="@string/trill_dlg_duration_64"
				android:drawableRight="@drawable/duration_64" />
		</RadioGroup>
	
	</android.support.v7.widget.GridLayout>

</ScrollView>